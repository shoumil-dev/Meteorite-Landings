{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Meteorite Landings on Earth (till 2016)",
    "width": 800,
    "height": 400,
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shoumil-dev/meteorite-landings/main/js/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },

            "projection": {
                "type": "equalEarth"
            },

            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shoumil-dev/meteorite-landings/main/data/meteorite-landings.csv"
            },

            "projection": {
                "type": "equalEarth"
            },

            "mark": "circle",
            "encoding": {
                "longitude": {
                    "field": "reclong",
                    "type": "quantitative"
                },

                "latitude": {
                    "field": "reclat",
                    "type": "quantitative"
                },

                "size": {"value": 10},
                "color": {"value": "steelblue"}
            }
        }
    ]
}
